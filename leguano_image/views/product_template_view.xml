<!-- addons/your_module/views/product_template_views.xml -->
<odoo>
  <record id="view_product_form_secondary_image" model="ir.ui.view">
    <field name="name">product.template.form.secondary.image</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">
      <xpath expr="//notebook" position="inside">
        <page string="Second Image" name="second_image">
          <group>
            <field name="image_secondary"
                   widget="image"
                   class="oe_avatar"
                   options="{'size': [256, 256]}"/>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
